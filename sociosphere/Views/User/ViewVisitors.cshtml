@model IEnumerable<sociosphere.Models.gatemanagement>

@{
    ViewData["Title"] = "Visitors";
}

<h2>Visitors</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Visitor Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Reason</th>
            <th>In Date Time</th>
            <th>Out Date Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model)
        {
            <tr>
                <td>@visitor.VisitorName</td>
                <td>@visitor.Phone</td>
                <td>@visitor.Address</td>
                <td>@visitor.Reason</td>
                <td>@visitor.InDateTime</td>
                <td>@visitor.OutDateTime?.ToString()  </td>
                <td>@visitor.Status</td>
            </tr>
        }
    </tbody>
</table>
