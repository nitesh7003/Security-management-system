@model sociosphere.Models.addcomplaint

<form asp-action="AddComplaint" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="WriteComplaint" class="control-label">Write Complaint</label>
        <textarea asp-for="WriteComplaint" class="form-control"></textarea>
        @Html.ValidationMessageFor(model => model.WriteComplaint, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="name" />
        <input type="hidden" asp-for="flatno" />
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Complaint" class="btn btn-primary" />
    </div>
</form>
