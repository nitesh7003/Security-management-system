@model sociosphere.Models.AnnouncementViewModel

<form asp-action="AddAnnouncement" method="post">
    <div class="form-group">
        <label asp-for="Announcement" class="control-label"></label>
        <textarea asp-for="Announcement" class="form-control"></textarea>
        <span asp-validation-for="Announcement" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Announcement" class="btn btn-primary" />
    </div>
</form>
